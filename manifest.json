{
    "name": "Disembodied Browsing",
    "version": "1.0",
    "description": "Watch yourself browse the internet",
    "permissions": ["activeTab", "declarativeContent","storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["https://www.instagram.com/"],
           "css": ["test.css"],
          "js": ["test.js"]
        }
      ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2            
}